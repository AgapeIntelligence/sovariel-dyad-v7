FROM python:3.10-slim
WORKDIR /app
COPY python_engine/requirements.txt .
RUN apt-get update && apt-get install -y build-essential libsndfile1 ffmpeg python3-dev && \
    pip install --upgrade pip && pip install -r requirements.txt
COPY python_engine/ .
EXPOSE 8050
CMD ["python3", "dyad_field_v7.py"]